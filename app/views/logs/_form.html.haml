-# frozen_string_literal: true
.row
  .col-md-10.py-4.px-2.fw-bold.font-monospace.rounded.d-flex.justify-content-between.align-items-right.display.fs-1 00 : 00 : 00 : 000
  .col-md-2  
    .mb-3.mt-5.d-flex.mx-3.justify-content-between
      .stop.hidden
        %i.bi.bi-stop-circle-fill
      .start
        %i.bi.bi-play-circle-fill

= simple_form_for(@log) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.input :user
    = f.input :start_at, as: :string
    = f.input :end_at, as: :string
    = f.input :notes

  .form-actions
    = f.button :submit

